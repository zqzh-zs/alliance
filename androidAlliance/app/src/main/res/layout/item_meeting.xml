<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="1dp"
                                   app:cardCornerRadius="12dp"
                                   app:cardElevation="3dp"
                                   app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

        <!-- 左侧会议图片，添加圆角 -->
        <ImageView
                android:id="@+id/ivMeetingImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#F5F5F5"
                android:contentDescription="会议图片"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.25" />


        <!-- 会议类型标签，移到图片下方并居中 -->
        <TextView
                android:id="@+id/tvMeetingType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_meeting_type"
                android:elevation="2dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/ivMeetingImage"
                app:layout_constraintStart_toStartOf="@id/ivMeetingImage"
                app:layout_constraintTop_toBottomOf="@id/ivMeetingImage" />

        <!-- 右侧内容区域 -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivMeetingImage"
                app:layout_constraintTop_toTopOf="parent">

            <!-- 会议标题 -->
            <TextView
                    android:id="@+id/tvMeetingTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#212121"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <!-- 日期信息 -->
            <TextView
                    android:id="@+id/tvMeetingDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="5dp"
                    android:drawableTint="#616161"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMeetingTitle" />

            <!-- 地点信息 -->
            <TextView
                    android:id="@+id/tvMeetingLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="5dp"
                    android:drawableTint="#616161"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMeetingDate" />

            <!-- 主办单位 -->
            <TextView
                    android:id="@+id/tvMeetingOrganizer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_organization"
                    android:drawablePadding="5dp"
                    android:drawableTint="#616161"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMeetingLocation" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 分隔线 -->
        <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#EEEEEE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMeetingType" />

        <!-- 会议简介 -->
        <TextView
                android:id="@+id/tvMeetingSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#424242"
                android:textSize="14sp"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
